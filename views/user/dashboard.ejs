<div class="admin-title">
    <h2>Posts</h2>
    <a href="/user/add-post" class="button">+ Add New Post</a>
</div>

<ul class="admin-posts">
    <% data.forEach(post => { %>
    <li>
        <a href="/user/post/<%= post._id %>">
            <%= post.title %> &nearr;
        </a>
        <div class="admin-post-controls">
            <a href="/user/edit-post/<%= post._id %>" class="btn">Edit</a>
            <form action="/user/delete-post/<%= post._id %>?_method=DELETE" method="post">
                <input type="submit" value="Delete" class="btn">
            </form>
        </div>
    </li>
    <% }) %>
</ul>